{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "battleships_game-master",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "frontendDist": "frontend/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev --prefix ../battleships_game-master/frontend",
    "beforeBuildCommand": "npm run build --prefix ../battleships_game-master/frontend"
  },
  "app": {
    "windows": [
      {
        "title": "Sink Simulator",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
