{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Battleships",
  "version": "0.1.0",
  "identifier": "com.battleships.dev",

  "build": {
    "frontendDist": "../frontend/dist",
    "devUrl": "http://localhost:5173",

    "beforeDevCommand": "npm run dev --prefix ./frontend",
    "beforeBuildCommand": "npm run build --prefix ./frontend && npm run build --prefix ./backend"
  },

  "app": {
    "windows": [
      {
        "title": "Battleships",
        "width": 1024,
        "height": 720,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],

    "resources": [
      "../backend/dist/backend.exe",
      "../backend/data/*.json"
    ],

    "externalBin": [],
    "windows": {
      "nsis": null
    }
  },

  "plugins": {}
}